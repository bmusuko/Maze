#:kivy 1.0

<Maze>:
    orientation: 'horizontal'
    id: mazeLayout
    inputFile: fileInput
    mazeLabel: empty_maze_lbl
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.4
        size_hint_y: 0.4
        spacing: 5
        TextInput:
            id: fileInput
            text: 'maze_small.txt'
        BoxLayout:
            size_hint_y: 0.5
            spacing: 2
            Button:
                text: 'Generate'
                on_press:
                    mazeLayout.generateMaze()
            Button:
                text: 'Reset'
                on_press:
                    mazeLayout.resetMaze()
        Button:
            text: 'Solve with BFS'
            on_press:
                mazeLayout.generateSolution(0) # mode 0 means using BFS
        Button:
            text: 'Solve with AStar'
            on_press:
                mazeLayout.generateSolution(1) # mode 1 means using AStar
    Label:
        id: empty_maze_lbl
        text: 'Input maze file in text box and press generate'